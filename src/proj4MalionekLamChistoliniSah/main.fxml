<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import proj4MalionekLamChistoliniSah.CompositionPanel?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Exit" onAction="#cleanUpOnExit" accelerator="Shortcut+Q"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Select All" accelerator="Shortcut+A"/>
                <MenuItem text="Delete" accelerator="Shortcut+DELETE"/>
            </Menu>
            <Menu text="Action">
                <MenuItem text="Play" onAction="#playComposition" accelerator="Shortcut+P"/>
                <MenuItem text="Stop" onAction="#stopComposition" accelerator="Shortcut+S"/>
            </Menu>
        </MenuBar>
    </top>

    <left>
        <VBox spacing="15.0">
            <children>
                <RadioButton text="Piano" textFill="grey" selected="true"/>
                <RadioButton text="Harpsicord" textFill="green" />
                <RadioButton text="Marimba" textFill="blue"/>
                <RadioButton text="Church organ" textFill="gold"/>
                <RadioButton text="Accordion" textFill="purple"/>
                <RadioButton text="Guitar" textFill="deepskyblue"/>
                <RadioButton text="Violin" textFill="black"/>
                <RadioButton text="French horn" textFill="sandybrown"/>
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </VBox>
    </left>

    <center>
        <ScrollPane>
            <CompositionPanel fx:id="compositionPanel" onMouseClicked="#handleMouseClick">
            </CompositionPanel>
        </ScrollPane>
    </center>

</BorderPane>